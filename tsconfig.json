{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "types", /* '.d.ts' 文件输出目录 */
        "emitDeclarationOnly": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strictNullChecks": true,
        "skipLibCheck": true,
        "lib": ["DOM", "ESNext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "removeComments": true,
    },
    "include": [
        "./**/*.*",
        "dist/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "demo",
        "config",
        "dist",
        "docs",
        "coverage"
    ],
}