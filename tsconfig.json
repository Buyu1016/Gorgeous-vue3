{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strictNullChecks": true,
    },
    "include": [
        "./**/*.*",
        "./src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true"
}